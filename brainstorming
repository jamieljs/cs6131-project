- given the ingredients you have and how many servings you want, give you a list of recipes you can make
- filter by cuisine/taste/difficulty?
- rating system (if time)

table COLLECTIONS
- collection_id
- collection_name
- collection_description
- collection_privacy

table RECIPE_COLLECTION
- collection_id
- recipe_id
- user_id (creator)

table RECIPES
- recipe_id (number)
- recipe_name
- recipe_description
- recipe_instructions
- recipe_difficulty
- recipe_cook_time (hours)
- recipe_privacy
- recipe_image (url)

table INGREDIENTS
- ingredient_id
- ingredient_name

table RECIPE_INGREDIENT
- recipe_id
- ingredient_id
- quantity (string)

table CUISINES
- cuisine_id
- cuisine_name

table RECIPE_CUISINE
- recipe_id
- cuisine_id

table RECIPE_VIEWERS
- recipe_id
- user_id

table RECIPE_CREATOR
- recipe_id
- user_id

table TAGS
- tag_id
- tag_name (spicy, vegetarian, allergens)
- tag_icon

table RECIPE_TAG
- recipe_id
- tag_id

table USERS
- user_id
- user_username
- user_password (hashed)
- user_salt (for hash)
- user_email
- user_description

table USER_INGREDIENT
- user_id
- ingredient_id

table RECIPE_RATING
- recipe_id
- user_id
- rating (out of 5)








